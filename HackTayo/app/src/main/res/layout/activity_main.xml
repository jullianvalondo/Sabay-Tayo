<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.entry.globelabs.hacktayo.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="Tara, Sabay Tayo!"
            android:textColor="@color/material_light_text_primary"
            android:textSize="@dimen/font_subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_spacing"
            android:text="Galing" />

        <Spinner
            android:id="@+id/spinner_book_from"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:entries="@array/locations" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_spacing"
            android:text="Papuntang" />

        <Spinner
            android:id="@+id/spinner_book_to"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/locations" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Schedule"
            android:textColor="@color/material_light_text_primary"
            android:textSize="@dimen/font_subhead" />

        <EditText
            android:id="@+id/edittext_book_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/content_spacing"
            android:drawableLeft="@drawable/ic_today_black"
            android:drawableStart="@drawable/ic_today_black"
            android:gravity="center_vertical"
            android:hint="Petsa"
            android:inputType="none"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_subhead" />

        <EditText
            android:id="@+id/edittext_book_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/content_spacing"
            android:drawableLeft="@drawable/ic_schedule_black"
            android:drawableStart="@drawable/ic_schedule_black"
            android:gravity="center_vertical"
            android:hint="Oras"
            android:inputType="none"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_subhead" />

        <EditText
            android:id="@+id/edittext_book_pax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/content_spacing"
            android:drawableLeft="@drawable/ic_people_black"
            android:drawableStart="@drawable/ic_people_black"
            android:gravity="center_vertical"
            android:hint="Bilang ng Kasama"
            android:inputType="number"
            android:textSize="@dimen/font_subhead" />

        <EditText
            android:id="@+id/edittext_book_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/content_spacing"
            android:drawableLeft="@drawable/ic_chat_bubble_black"
            android:drawableStart="@drawable/ic_chat_bubble_black"
            android:gravity="center_vertical"
            android:hint="Mensahe (Optional)"
            android:inputType="text"
            android:textSize="@dimen/font_subhead" />

        <Button
            android:id="@+id/button_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="BOOK"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>